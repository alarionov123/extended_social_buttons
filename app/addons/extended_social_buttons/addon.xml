<?xml version="1.0"?>
<addon scheme="3.0">
    <id>extended_social_buttons</id>
    <version>1.0</version>
    <priority>4294967294</priority>
    <status>active</status>
    <supplier>CS-Cart Support | alarionov</supplier>
    <default_language>en</default_language>
    <settings edition_type="ROOT,STOREFRONT">
        <sections>
            <section id="general">
                <items>
                    <item id="social_settings">
                        <type>multiple checkboxes</type>
                        <variants>
                            <item id="telegram"></item>
                            <item id="viber"></item>
                            <item id="twitter"></item>
                            <item id="odnoklassniki"></item>
                            <item id="linkedin"></item>
                            <item id="facebook"></item>
                            <item id="skype"></item>
                            <item id="vk"></item>
                        </variants>
                        <default_value>telegram</default_value>
                    </item>
                    <item id="telegram_settings">
                        <type>header</type>
                    </item>
                    <item id="telegram_enable">
                        <type>checkbox</type>
                        <default_value>Y</default_value>
                    </item>
                    <item id="telegram_comment_text">
                        <type>input</type>
                    </item>
                    <item id="telegram_size">
                        <type>selectbox</type>
                        <default_value>medium</default_value>
                        <variants>
                            <item id="medium">
                            </item>
                            <item id="large">
                            </item>
                        </variants>
                    </item>
                    <item id="telegram_display_button_text">
                        <type>selectbox</type>
                        <default_value>share</default_value>
                        <variants>
                            <item id="none">
                            </item>
                            <item id="share">
                            </item>
                        </variants>
                    </item>
                    <item id="viber_settings">
                        <type>header</type>
                    </item>
                    <item id="viber_enable">
                        <type>checkbox</type>
                        <default_value>Y</default_value>
                    </item>
                    <item id="viber_text">
                        <type>input</type>
                    </item>
                    <item id="twitter_settings">
                        <type>header</type>
                    </item>
                    <item id="twitter_enable">
                        <type>checkbox</type>
                        <default_value>Y</default_value>
                    </item>
                    <item id="twitter_text">
                        <type>input</type>
                    </item>
                    <item id="pintrest_settings">
                        <type>header</type>
                    </item>
                    <item id="pintrest_enable">
                        <type>checkbox</type>
                        <default_value>Y</default_value>
                    </item>
                    <item id="pintrest_text">
                        <type>input</type>
                    </item>
                    <item id="facebook_settings">
                        <type>header</type>
                    </item>
                    <item id="facebook_enable">
                        <type>checkbox</type>
                        <default_value>Y</default_value>
                    </item>
                    <item id="facebook_text">
                        <type>input</type>
                    </item>
                    <item id="skype_settings">
                        <type>header</type>
                    </item>
                    <item id="skype_enable">
                        <type>checkbox</type>
                        <default_value>Y</default_value>
                    </item>
                    <item id="skype_text">
                        <type>input</type>
                    </item>
                    <item id="vk_settings">
                        <type>header</type>
                    </item>
                    <item id="vk_enable">
                        <type>checkbox</type>
                        <default_value>Y</default_value>
                    </item>
                    <item id="vk_text">
                        <type>input</type>
                    </item>
                    <item id="odnoklassniki_settings">
                        <type>header</type>
                    </item>
                    <item id="odnoklassniki_enable">
                        <type>checkbox</type>
                        <default_value>Y</default_value>
                    </item>
                    <item id="odnoklassniki_text">
                        <type>input</type>
                    </item>
                    <item id="twitter_settings">
                        <type>header</type>
                    </item>
                    <item id="twitter_enable">
                        <type>checkbox</type>
                        <default_value>Y</default_value>
                    </item>
                    <item id="twitter_text">
                        <type>input</type>
                    </item>
                </items>
            </section>
        </sections>
    </settings>
</addon>
